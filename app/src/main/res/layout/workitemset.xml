<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="#55C5F8">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="8dp"

            android:layout_weight="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/dateForHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dates"
                    android:textSize="20sp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/epilogue_medium"/>

                <ImageView
                    android:id="@+id/greenCir"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/ic_circle"
                    android:layout_marginTop="2dp"
                    android:visibility="invisible">
                </ImageView>
            </LinearLayout>

            <TextView
                android:id="@+id/homeWorkTxts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actual data"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/imgDeleteBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/delete_icon_red"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>