<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".classManage"
    android:orientation="vertical"
    android:padding="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Class"
        android:textSize="34sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/epilogue_bold"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/classNametxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/epilogue_bold"
        android:text="Class"
        android:textColor="@color/black"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/lastStdtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/epilogue_bold"
        android:text="S1"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <EditText
            android:id="@+id/edtStudent"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:ems="10"
            android:background="@drawable/custom_input"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:hint="Add Student"
            android:layout_weight="7.5"/>

        <ImageButton
            android:id="@+id/addStudentBtn"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="2.5"
            android:background="@color/white"
            app:srcCompat="@drawable/ic_add" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#72C2FF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btnHomeWork"
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/homework" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Home Work"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btnShare"
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/share" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Share Code"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btnStudyMat"
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/book" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Study materials"
                        android:textColor="@color/black" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Students"
        android:fontFamily="@font/epilogue_medium"
        android:textColor="@color/black"
        android:textSize="20sp">
    </TextView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ListviewStdList"/>


</LinearLayout>