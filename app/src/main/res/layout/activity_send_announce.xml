<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".send_announce"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="10dp"
    android:fontFamily="@font/epilogue_bold"
    android:text="Send Announcement"
    android:textColor="@color/black"
    android:textSize="30sp" />


    <EditText
        android:id="@+id/edtAnnounce"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:hint="Announcement Text"/>


    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:textSize="20sp"
        android:layout_marginVertical="8dp"
        android:fontFamily="@font/epilogue_medium"
        android:enabled="true">
    </Switch>
    <Button
        android:id="@+id/uploadImgBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_ripple"
        android:drawableRight="@drawable/ic_upload"
        android:paddingEnd="30dp"
        android:drawablePadding="-30dp"
        android:textColor="@color/white"
        android:text="Upload Image"
        android:layout_marginTop="10dp"
        android:enabled="false"/>
    <TextView
        android:id="@+id/alertImgTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/epilogue_bold"
        android:text="Image Selected"
        android:textColor="#04B50D"
        android:textSize="13sp"
        android:visibility="gone"/>


    <Button
        android:id="@+id/sendAnnounceBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_ripple"
        android:textColor="@color/white"
        android:text="Send Announcement"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/cloudImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/announce"
        android:adjustViewBounds="true"
        android:layout_margin="20dp"
        android:visibility="gone"/>
</LinearLayout>