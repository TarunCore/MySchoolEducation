<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        android:background="#55C5F8">

        <TextView
            android:id="@+id/examNameTXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dates"
            android:textSize="18sp"
            android:fontFamily="@font/epilogue_medium"
            android:paddingStart="5dp"
            android:textColor="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:layout_weight="9">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scored Mark"
                android:fontFamily="@font/epilogue_medium"
                android:textColor="@color/black"
                android:layout_weight="4">
            </TextView>
            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/epilogue_medium"
                android:text="Total Mark"
                android:layout_weight="4">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:layout_weight="9">
            <TextView
                android:id="@+id/markTXT1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actual data"
                android:fontFamily="@font/epilogue_medium"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_weight="4"/>
            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/markTXT2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actual data"
                android:textColor="@color/black"
                android:fontFamily="@font/epilogue_medium"
                android:textSize="17sp"
                android:layout_weight="4"/>
        </LinearLayout>

        <TextView
            android:id="@+id/remarkTXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="Remark:"
            android:fontFamily="@font/epilogue_medium"
            android:visibility="gone"
            android:textColor="@color/black" />
    </LinearLayout>

</androidx.cardview.widget.CardView>